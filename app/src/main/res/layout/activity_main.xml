<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zs.myaccount.MainActivity"
    android:clipChildren="false">

    <!--第一部分-->
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:orientation="vertical"
        android:id="@+id/vp_mainactivity"
        android:text=" This is ViewPager!">
    </android.support.v4.view.ViewPager>

    <!--第二部分-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:clipChildren="false"
        android:background="#B2B2B2">
    
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp">
        </View>

    <!--第三部分-->
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:id="@+id/rg_mainactivity_bottom"
            android:layout_alignParentBottom="true"
            android:clipChildren="false"
            android:background="#FFF"
            >
            <RadioButton
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:button="@null"
                android:drawableTop="@drawable/radiobutton_main_detail"
                android:text="明细"
                android:id="@+id/rb_mainactivity_detail"
                android:paddingBottom="1dp"
                />
            <RadioButton
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:button="@null"
                android:drawableTop="@drawable/radiobutton_main_wish"
                android:text="愿望"
                android:id="@+id/rb_mainactivity_wish"
                android:paddingBottom="1dp"
                />
            <RadioButton
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:button="@null"
                android:drawableTop="@drawable/ic_plus_default"
                android:text=""
                android:id="@+id/rb_mainactivity_plus"
                />
            <RadioButton
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:button="@null"
                android:drawableTop="@drawable/radiobutton_main_list"
                android:text="报表"
                android:id="@+id/rb_mainactivity_list"
                android:paddingBottom="1dp"
                />
            <RadioButton
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:button="@null"
                android:drawableTop="@drawable/radiobutton_main_mine"
                android:text="我的"
                android:id="@+id/rb_mainactivity_mine"
                android:paddingBottom="1dp"
                />
        </RadioGroup>

    </LinearLayout>

</RelativeLayout>
