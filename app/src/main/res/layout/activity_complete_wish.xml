<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.zs.myaccount.CompleteWishActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">
        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="#00000000"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_arrow_default"
            android:id="@+id/imgbt_completewishactivity_back"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="已完成愿望"
            android:textSize="25sp"
            android:padding="15dp"
            android:textColor="#000"
            android:layout_toRightOf="@id/imgbt_completewishactivity_back"/>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rl_completewishactivity_norecord">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/transparent"
                android:id="@+id/view_completewishactivity_blankview"
                android:layout_centerInParent="true"/>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_no_record"
                android:id="@+id/iv_completewishactivity_norecord"
                android:layout_above="@id/view_completewishactivity_blankview"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="没有已完成愿望"
                android:layout_marginTop="15dp"
                android:layout_below="@id/view_completewishactivity_blankview"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rcv_completewishactivity_wishes"
            >
        </android.support.v7.widget.RecyclerView>

    </FrameLayout>
</LinearLayout>
