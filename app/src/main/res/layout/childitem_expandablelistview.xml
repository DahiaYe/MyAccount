<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:gravity="center_vertical"
    android:background="#FFF">
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dp"
        android:padding="5dp"
        android:src="@drawable/ic_yue_default"
        android:id="@+id/iv_myactivity_childItem_icon"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/tv_myactivity_childItem_describe"
        android:layout_toRightOf="@id/iv_myactivity_childItem_icon"
        android:textSize="16sp"
        android:text="工资"/>
    <TextView
        android:id="@+id/tv_myactivity_childItem_howMuch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="5000"
        android:textSize="16sp"/>
</RelativeLayout>