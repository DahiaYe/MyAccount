<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.zs.view.OwnerItem
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:ownerItemIcon="@drawable/ic_touxiang1_yellow"
            app:ownerItemTitle="未登录"
            android:background="#30C9F2"
            android:id="@+id/oi_ownerpager_login"
            ></com.example.zs.view.OwnerItem>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            android:textSize="16sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="@drawable/rectangle"
            android:text="去登录"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <com.example.zs.view.OwnerItem
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:ownerItemIcon="@drawable/ic_yue_default"
            app:ownerItemTitle="我的余额"
            android:background="#FFF"
            android:id="@+id/oi_ownerpager_balance"
            ></com.example.zs.view.OwnerItem>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            android:textSize="16sp"
            android:textColor="#20C9F5"
            android:text="0.00" />
    </RelativeLayout>
    <com.example.zs.view.OwnerItem
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:ownerItemIcon="@drawable/ic_zhuti_default"
        app:ownerItemTitle="主题皮肤"
        android:layout_marginTop="10dp"
        android:background="#FFF"
        android:id="@+id/oi_ownerpager_theme"
        ></com.example.zs.view.OwnerItem>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/abc_list_pressed_holo_light"
        android:layout_marginLeft="80dp"/>
    <com.example.zs.view.OwnerItem
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:ownerItemIcon="@drawable/ic_share_default"
        app:ownerItemTitle="分享APP"
        android:background="#FFF"
        android:id="@+id/oi_ownerpager_share"
        ></com.example.zs.view.OwnerItem>
    <com.example.zs.view.OwnerItem
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:ownerItemIcon="@drawable/ic_yijian_default"
        android:layout_marginTop="10dp"
        app:ownerItemTitle="意见反馈"
        android:background="#FFF"
        android:id="@+id/oi_ownerpager_feedback"
        ></com.example.zs.view.OwnerItem>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/abc_list_pressed_holo_light"
        android:layout_marginLeft="80dp"/>
    <com.example.zs.view.OwnerItem
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:ownerItemIcon="@drawable/ic_upgrade_default"
        app:ownerItemTitle="检查更新"
        android:background="#FFF"
        android:id="@+id/oi_ownerpager_update"
        ></com.example.zs.view.OwnerItem>
    <com.example.zs.view.OwnerItem
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:ownerItemIcon="@drawable/ic_more_default"
        android:layout_marginTop="10dp"
        app:ownerItemTitle="更多"
        android:background="#FFF"
        android:id="@+id/oi_ownerpager_more"
        ></com.example.zs.view.OwnerItem>
</LinearLayout>