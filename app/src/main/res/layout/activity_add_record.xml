<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.zs.myaccount.AddRecordActivity">
    <RelativeLayout
        android:id="@+id/rl_addRecordActivity_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        >
        <RadioGroup
            android:id="@+id/rg_addRecordActivity_singleChoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >
            <RadioButton
                android:id="@+id/btn_addRecordActivity_income"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="@drawable/bg_addbutton_choice"
                android:textColor="#ff909090"
                android:textSize="15sp"
                android:gravity="center"
                android:button="@null"
                android:text="收入"
                />
            <RadioButton
                android:id="@+id/btn_addRecordActivity_payout"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="@drawable/bg_addbutton_choice"
                android:textColor="#ff909090"
                android:textSize="15sp"
                android:gravity="center"
                android:button="@null"
                android:text="支出"/>
        </RadioGroup>
        <ImageView
            android:id="@+id/iv_addRecordActivity_"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_x_default"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <View
        android:id="@+id/view_whiteTop"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#90909090"
        android:layout_below="@+id/rl_addRecordActivity_title"/>
    <RelativeLayout
        android:id="@+id/ll_addRecordActivity_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_whiteTop"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <Button
            android:id="@+id/btn_addRecordActivity_time"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_bttonrectangle_date"
            android:textSize="14sp"
            android:onClick="choiceTime"
            android:layout_marginLeft="15dp"
            android:text="9月03日"/>
    </RelativeLayout>
    <View
        android:id="@+id/view_whiteUp"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#90909090"
        android:layout_below="@+id/ll_addRecordActivity_time"/>
   <com.example.zs.view.NoSrcollPager
       android:id="@+id/vp_addRecordActivity_content"
       android:layout_below="@+id/view_whiteUp"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
   </com.example.zs.view.NoSrcollPager>
    <View
        android:id="@+id/view_whiteTop2"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#90909090"
        android:layout_above="@+id/rl_addRecordActivity_remarks"/>
    <RelativeLayout
        android:id="@+id/rl_addRecordActivity_remarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/ll_addRecordActivity_keyboard"
       >
        <RelativeLayout
            android:id="@+id/rl_addRecordActivity_remarklayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="gone">
            <TextView
                android:id="@+id/tv_addCategory_markTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="备注"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:textSize="10sp"/>
            <EditText
                android:id="@+id/et_addCategory_markContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_toRightOf="@+id/tv_addCategory_markTitle"
                />
            <Button
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:text="完成"
                android:background="@drawable/bg_bttonrectangle_date"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/iv_addRecordActivity_photo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_photo60_default"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <ImageView
                android:id="@+id/iv_addRecordActivity_remark"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_pen2_default"
                android:layout_toRightOf="@+id/iv_addRecordActivity_photo"/>
            <TextView
                android:id="@+id/tv_addRecordActivity_inputNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="0"
                android:textSize="25sp"
                android:textColor="#31C9F2"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:id="@+id/view_whiteUp2"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#90909090"
        android:layout_below="@+id/rl_addRecordActivity_remarks"/>
    <LinearLayout
        android:id="@id/ll_addRecordActivity_keyboard"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="0px"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_addCategory_1"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="20sp"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/tv_addCategory_2"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="2"
                    android:textSize="20sp"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/tv_addCategory_3"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="3"
                    android:textSize="20sp"
                    android:textColor="#000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_addCategory_4"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="4"
                    android:textSize="20sp"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/tv_addCategory_5"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="5"
                    android:textSize="20sp"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/tv_addCategory_6"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="6"
                    android:textSize="20sp"
                    android:textColor="#000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_addCategory_7"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="7"
                    android:textSize="20sp"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/tv_addCategory_8"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="8"
                    android:textSize="20sp"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/tv_addCategory_9"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="9"
                    android:textSize="20sp"
                    android:textColor="#000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_addCategory_10"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="."
                    android:textSize="20sp"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/tv_addCategory_0"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="20sp"
                    android:textColor="#000"/>
            </LinearLayout>
            </LinearLayout>
          <LinearLayout
              android:layout_width="0px"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:layout_weight="1">
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="0px"
                  android:layout_weight="1"
                  android:gravity="center">
                  <ImageView
                      android:id="@+id/tv_addCategory_removeNumber"
                      android:layout_width="40dp"
                      android:layout_height="40dp"
                      android:src="@drawable/ic_key_del"/>

              </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="0px"
                  android:layout_weight="1"
                  android:gravity="center">
                  <TextView
                      android:id="@+id/tv_addCategory_submit"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="确定"
                      android:textSize="20sp" />
              </LinearLayout>
          </LinearLayout>
    </LinearLayout>
</RelativeLayout>
