<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    >
    <com.example.zs.view.CircleImageView
        android:layout_marginTop="5dp"
        android:id="@+id/cv_addPage_recordIcon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:padding="8dp"
        android:background="@drawable/bg_addcategory"
        android:src="@drawable/ic_yiban_default"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"/>
    <com.example.zs.view.CircleImageView
        android:id="@+id/cv_addPage_delete"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:padding="3dp"
        android:visibility="gone"
        android:layout_marginLeft="-10dp"
        android:layout_alignLeft="@+id/cv_addPage_recordIcon"
        android:src="@drawable/ic_delete2"
        android:background="@drawable/bg_addrecord_delete"/>
    <TextView
        android:id="@+id/tv_addPage_catagoryContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/cv_addPage_recordIcon"
        android:text="一般"/>
</RelativeLayout>